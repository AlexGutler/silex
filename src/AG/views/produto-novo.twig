{% extends 'layout.twig' %}

{% block title %}AG Produtos || {% if id == null %}Novo Produto{% else %}Editar Produto{% endif %} {% endblock %}

{% block content %}
    <header class="container">
        <h1> {% if id == null %}Novo Produto{% else %}Editar Produto{% endif %}</h1>
    </header>

    <section class="container">
        <form class="form-horizontal" method="post"
              action="{% if id == null %}{{ path('produto-salvar') }}{% else %}{{ path('produto-atualizar', {id: id}) }}{% endif %}">
            <input type="hidden" id="id" name="id" value="{% if id == null %}{% else %}{{ id }}{% endif %}">
            <div class="form-group">
                <label for="nome" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nome" name="nome" required value="{% if id == null %}{% else %}{{ nome }}{% endif %}">
                </div>
            </div>
            <div class="form-group">
                <label for="descricao" class="col-sm-2 control-label">Descrição</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="descricao" name="descricao" required rows="3">{% if id == null %}{% else %}{{ descricao }}{% endif %}</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="valor" class="col-sm-2 control-label">Valor</label>
                <div class="col-sm-10">
                    <input type="number"  step="any" class="form-control" id="valor" required name="valor" value="{% if id == null %}{% else %}{{ valor }}{% endif %}">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    {% if id == null %}
                    <button type="reset" class="btn btn-warning">Limpar</button>
                    {% endif %}
                </div>
            </div>
        </form>
    </section>
{% endblock %}

{% block form %}

{% endblock %}

