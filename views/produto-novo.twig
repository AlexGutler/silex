{% extends 'layout.twig' %}

{% block title %}AG Produtos || {% if id > 0 %}Novo Produto{% else %}Editar Produto{% endif %} {% endblock %}

{% block content %}
    <header class="container">
        <h1> {% if id == 0 %}Novo Produto{% else %}Editar Produto{% endif %}</h1>
    </header>

    <section class="container">
        <form class="form-horizontal" method="post" action="{{ path('produto-salvar') }}">
            <input type="hidden" id="id" value="">
            <div class="form-group">
                <label for="nome" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nome" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="descricao" class="col-sm-2 control-label">Descrição</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="descricao" rows="3"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="valor" class="col-sm-2 control-label">Valor</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="valor" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="reset" class="btn btn-warning">Limpar</button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}

